{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "allowJs": true,
    "jsx": "react",
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": [
      "es6", "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}